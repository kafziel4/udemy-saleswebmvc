@{
    ViewData["Title"] = "Sales Records";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple search</legend>
                <div class="row mb-3">
                    <label for="minDate" class="col-lg-2 col-form-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="maxDate" class="col-lg-2 col-form-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="mb-3">
                    <div class="col-lg-10 offset-lg-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping search</legend>
                <div class="row mb-3">
                    <label for="minDate" class="col-lg-2 col-form-label">Min Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="maxDate" class="col-lg-2 col-form-label">Max Date</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="mb-3">
                    <div class="col-lg-10 offset-lg-2">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>